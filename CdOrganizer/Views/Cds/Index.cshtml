@using CdOrganizer.Models;

<h1>CD Organizer</h1>

<ul>
@if (Model.Count == 0)
{
  <p>You have no cds for the artist!</p>
}
@if(Model.Count != 0)
{
  @foreach (Cd cd in Model)
  {
    <li><a href='/cds/@cd.GetId()'>@cd.GetDescription()</a></li>
  }
}
</ul>

<a href="/cds/new">Add a new cd</a>

<form action="/cds/delete" method="post">
  <button type="submit" name="button">Clear All Cds</button>
</form>
